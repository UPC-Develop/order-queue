package pe.edu.upc.passport.queue.consumer;

import org.springframework.amqp.rabbit.annotation.RabbitListener;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Component;

import pe.edu.upc.passport.entity.OrderEntity;
import pe.edu.upc.passport.queue.ConfigQueue;
import pe.edu.upc.passport.queue.entity.AppointmentQueueEntity;
import pe.edu.upc.passport.repository.AppointmentRepository;

@Component
public class OrderConsumer {

	@Autowired
	private AppointmentRepository appointmentRepository;
	
	@RabbitListener(queues = ConfigQueue.QUEUE)
	public void consumerAppointmentQueue(AppointmentQueueEntity appointmentQueue) {
		
		OrderEntity appointment = new OrderEntity();
		
		appointment.nationalId = appointmentQueue.nationalId;
		appointment.email = appointmentQueue.email;
		appointment.campus = appointmentQueue.campus;
		appointment.applicationDate = appointmentQueue.applicationDate;
		
		appointmentRepository.save(appointment);
	}
	
}
